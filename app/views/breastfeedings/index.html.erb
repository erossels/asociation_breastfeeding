<p id="notice"><%= notice %></p>

<div class='container'>
  <h1>Breastfeedings</h1>
    <div>
      <table class='table table-sm my-4 col-md-6'>
        <thead>
          <tr>
            <th>Date</th>
            <th>Milk</th>
            <th>Time</th>
            <th>Baby</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @breastfeedings.each do |breastfeeding| %>
            <tr>
              <td><%= breastfeeding.date %></td>
              <td><%= breastfeeding.milk %></td>
              <td><%= breastfeeding.time %></td>
              <td><%= breastfeeding.baby_id %></td>
              <td><%= link_to 'Show', breastfeeding %></td>
              <td><%= link_to 'Edit', edit_breastfeeding_path(breastfeeding) %></td>
              <td><%= link_to 'Destroy', breastfeeding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <br>

  <%= link_to 'New Breastfeeding', new_breastfeeding_path %>
</div>